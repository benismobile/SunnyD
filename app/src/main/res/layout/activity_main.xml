<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:psts="com.astuetz.pagerslidingtabstrip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        psts:pstsShouldExpand="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="14sp"
        android:textColor="#000000"
        psts:pstsDividerColor="@color/green"
        psts:pstsIndicatorColor="@color/red"
        psts:pstsUnderlineColor="@color/blue"
        psts:pstsTabPaddingLeftRight="14dp">
    </com.astuetz.PagerSlidingTabStrip>


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>